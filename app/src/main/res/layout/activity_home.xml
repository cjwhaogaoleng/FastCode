<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="clickPresenter"
            type="com.example.fastcode.module.postLogin.home.HomeActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical"
        android:padding="40dp"
        tools:context=".module.postLogin.home.HomeActivity">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/home_text" />

        <ImageView
            android:id="@+id/iv_home_ac"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:onClick="@{(view)->clickPresenter.clickPresenter(view)}"
            android:src="@drawable/home_ac" />

        <ImageView
            android:id="@+id/iv_home_ic"
            android:layout_width="wrap_content"
            android:layout_height="70dp"

            android:layout_marginTop="20dp"
            android:onClick="@{(view)->clickPresenter.clickPresenter(view)}"
            android:src="@drawable/home_interest" />

        <ImageView
            android:id="@+id/iv_home_his"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:onClick="@{(view)->clickPresenter.clickPresenter(view)}"
            android:src="@drawable/home_history" />

        <ImageView
            android:id="@+id/iv_home_quit"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:onClick="@{(view)->clickPresenter.clickPresenter(view)}"
            android:src="@drawable/bt_background_quit" />


    </LinearLayout>
</layout>